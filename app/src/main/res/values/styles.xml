<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="toolbarStyle">@style/Widget.MyTheme.Toolbar</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MyTheme.Headline5</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MyTheme.Subtitle1</item>
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="floatingActionButtonStyle">Widget.MyTheme.FloatingActionButton</item>
    </style>


    <!-- Toolbar -->
    <style name="Widget.MyTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- TabLayout -->
    <style name="ThemeOverlay.MyTheme.TabLayout" parent="">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorOnSurface">@android:color/white</item>
    </style>

    <!--Fab-->
    <style name="Widget.MyTheme.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="useCompatPadding">true</item>
    </style>

</resources>
